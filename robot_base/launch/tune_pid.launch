<launch>
    <include file="$(find robot_base)/launch/hw_base.launch"/>

    <node name="setpoint_left" pkg="robot_base" type="setpoint_pub.py">
        <param name="~topic" value="/left_wheel/setpoint"/>
        <param name="~rate" value="1000"/>
    </node>
    <node name="setpoint_right" pkg="robot_base" type="setpoint_pub.py">
        <param name="~topic" value="/right_wheel/setpoint"/>
        <param name="~rate" value="1000"/>
    </node>

    <!-- rqt_plot is a resource hog, so if you're seeing high CPU usage, don't launch rqt_plot  -->
    <!-- topics defined in hw_base.launch -->
    <node name="rqt_plot_left" pkg="rqt_plot" type="rqt_plot"
          args="/left_wheel/control_effort/data
                /left_wheel/vel/data
                /left_wheel/setpoint/data" />
    <!-- topics defined in hw_base.launch -->
    <node name="rqt_plot_right" pkg="rqt_plot" type="rqt_plot"
          args="/right_wheel/control_effort/data
                /right_wheel/vel/data
                /right_wheel/setpoint/data" />

    <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" />

    <node name="rqt_robot_monitor" pkg="rqt_robot_monitor" type="rqt_robot_monitor" />
</launch>
