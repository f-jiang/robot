<launch>
    <arg name="drive_controller_name" value="base_controller"/>

    <!-- base_node and serial_node -->
    <include file="$(find robot_base)/launch/hw_base.launch"/>

    <!-- load diff drive controller -->
    <rosparam command="load" file="$(find robot_control)/param/robot_base.yaml"/>

    <node pkg="controller_manager" 
          name="controller_spawner"
          type="spawner"
          output="screen"
          args="$(arg drive_controller_name)"/>
          
    <include file="$(find rplidar_ros)/launch/rplidar.launch"/>

    <node pkg="usb_cam"
          name="usb_cam_node"
          type="usb_cam_node"
          output="screen">
        <param name="video_device" value="/dev/video0" type="string"/>
        <param name="image_width" value="640" type="int"/>
        <param name="image_height" value="480" type="int"/>
        <param name="pixel_format" value="yuyv" type="string"/>
        <param name="camera_frame_id" value="usb_cam" type="string"/>
        <param name="io_method" value="mmap" type="string"/>

        <param name="~camera_info_url"
               value="$(find robot_base)/calibration/camera.yaml"
               type="string"/>
    </node>
</launch>
